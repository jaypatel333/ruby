 <div class="row">
    <div class="col s6 offset-s3">
      <div class="card purple lighten lighten-1">
        <div class="card-content white-text">
          <span class="card-title">Walls</span>
         <table>
  <thead>
    <tr>
      <th>Title</th>
      <th>User</th>
      <th>Access</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @walls.each do |wall| %>
      <% if wall.user_id == current_user.id %>
      <tr>
        <td><%= wall.title %></td>
        <td><%= User.find(wall.user_id).username %></td>
        <td><%= wall.access_id %></td>
        <td><%= link_to '<button type="button" class="waves-effect waves amber darken-3 btn" style="color: white !important;">Show</button>'.html_safe, wall %></td>
        <td><%= link_to '<button type="button" class="waves-effect waves amber darken-3 btn" style="color: white !important;">Edit</button>'.html_safe, edit_wall_path(wall) %></td>
        <td><%= link_to '<button type="button" class="waves-effect waves amber darken-3 btn" style="color: white !important;">Destroy</button>'.html_safe, wall, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
<td><%= link_to '<button type="button" class="waves-effect waves amber darken-3 btn" style="color: white !important;">New Wall</button>'.html_safe, new_wall_path %></td>

