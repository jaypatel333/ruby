<br><br><br><br><br><br><br><br><br>
<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @wall.title %>
</p>

<p>
  <strong>User:</strong>
  <%= User.find(@wall.user_id).username %>
</p>

<p>
  <strong>Access:</strong>
  <%= @wall.access_id %>
</p>

<h3>Posts</h3>
<% @wall.posts.each do |post| %>
  <p>
    <strong>Body:</strong>
    <%= post.body %>
    <strong>Poster:</strong>
    <%= User.find(post.user_id).username%>
  </p>

<% end %>
<h3>Add a post:</h3>
<%= form_for([@wall, @wall.posts.build]) do |f| %>
 
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Edit', edit_wall_path(@wall) %> |
