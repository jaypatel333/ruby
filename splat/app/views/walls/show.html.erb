<br><br><br><br><br><br><br><br><br>
<p id="notice"><%= notice %></p>
<center>
<h3>
  <%= @wall.title %>
</h3>

<p>
  <strong>Wall ID:</strong>
  <%= @wall.id %>
</p>

<p>
  <strong>Wall Owner:</strong>
  <%= User.find(@wall.user_id).username %>
</p>

<p>
  <strong>Access:</strong>
  <%= @wall.access_id %>
</p>
</center>
<% @wall.posts.each do |post| %>

  <div class="row">
    <div class="col s6 offset-s3">
      <div class="card purple lighten lighten-1">
        <div class="card-content white-text">
          <span class="card-title"></span>
         <%= post.body %>
        </div>
        <div class="card-action">
          <span class="amber-text"><%= User.find(post.user_id).username%></span>
          <%= link_to like_post_path(post), method: :put do %>
          Like
          <%= post.get_upvotes.size %>
          <% end %>
        
          <%= link_to unlike_post_path(post), method: :put do %>
          Unlike
          <%= post.get_downvotes.size %>
          
        <% end %>
        
        </div>
      </div>
    </div>
  </div>

  
<% end %>
  <div class="row">
    <div class="col s6 offset-s3">
      <div class="card purple lighten lighten-1">
        <div class="card-content white-text">
          <span class="card-title">Add a Splat</span>
           <%= form_for([@wall, @wall.posts.build]) do |f| %>
 
  <p>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
        </div>
        <div class="card-action">


<%= link_to '<button type="button" class="waves-effect waves amber darken-3 btn" style="color: white !important;">Edit</button>'.html_safe, edit_wall_path(@wall) %>
<%= link_to '<button type="button" class="waves-effect waves amber darken-3 btn" style="color: white !important;">Back</button>'.html_safe, walls_path %>


<footer class="purple lighten-2" style="position:fixed;bottom:0;left:0;width:100%;"> <br>
      <div class="footer-copyright" style="position:fixed;bottom:0;left:0;width:100%;">
        <div class="container"> Made by <span style="color: #fef5fd;">Splat</span>
        </div>
      </div>
</footer>
